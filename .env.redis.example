# Redis Configuration
# Copy these variables to your .env file and adjust as needed

# Basic Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Redis Advanced Configuration
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=50
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000

# Redis Logging (optional)
REDIS_LOGGING=false

# Redis Pool Configuration
REDIS_POOL_SIZE=5
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Cache TTL Settings (in seconds)
DOCX_CACHE_TTL=86400      # 24 hours
SESSION_CACHE_TTL=3600    # 1 hour  
API_CACHE_TTL=300         # 5 minutes

# Circuit Breaker Configuration
CIRCUIT_BREAKER_PERSIST=true
CIRCUIT_BREAKER_TIMEOUT=5000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Health Monitoring
REDIS_HEALTH_CHECK_INTERVAL=30000
REDIS_LATENCY_WARNING_THRESHOLD=100
REDIS_LATENCY_CRITICAL_THRESHOLD=500

# Development/Testing
REDIS_FLUSH_ON_START=false  # WARNING: Only use in development